{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": false,
    "inlineSources": true,
    "skipLibCheck": true,
    "outDir": "tmp",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "types": [
      "node",
      "testcafe"
    ]
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
